{{ if ne .chezmoi.os "windows" -}}
#!/usr/bin/env bash
# -*-shell-script-*- vim:syntax=shell-script
# code:language=shellscript
#
# Install `oh-my-zsh`

set -euo pipefail

{{ template "functions-bin" }}

step "Install ${color6}oh-my-zsh${reset}"

ZSH="${XDG_DATA_HOME:-$HOME/.local/share}/oh-my-zsh" bash -c "$(curl -fsLS https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" -- --unattended --keep-zshrc

success "${color6}oh-my-zsh${reset} installed successfully"
{{ end -}}
