# -*-zsh-*- vim:ft=zsh

#=======================#
#     Login Command     #
#=======================#

if hash fortune 2>/dev/null && hash chara 2>/dev/null; then
  if hash lolcat 2>/dev/null; then
    fortune | lolcat -f | chara say --random --width=$(( ${COLUMNS:-55} - 6 ))
  else
    fortune | chara say --random --width=$(( ${COLUMNS:-55} - 6 ))
  fi
fi
