# remove default bindings
map d
map f
map gh

# basic function
map a add-new
map DD remove
map dd trash
map dl trash-list
map dr restore-trash
map e edit
map i $INFO=true ~/.config/lf/previewer $f | less -Ri
map fF find-back
map ff find
map fj jump
map fm %file -Lb --mime-type $f
map fs find-text-content
map L view-logs
map P link
map R bulk-rename
map x cut
map Z zoxide-interactive
map z push :zoxide<space>
map . set hidden!
map * exe-toggle
map <c-g> lazygit
map <c-r> hard-reload
map <enter> open

# quick navigation
map gh cd ~
map gC cd ~/.cache
map gc cd ~/.config
map gs cd ~/.local/share
map gH cd ~/.local/share/chezmoi
map gD cd ~/Downloads
map gr cd /
map ge cd /etc
map gd cd /home/data
map gP cd /home/data/pictures
map gp cd ~/Projects
map gS cd /usr/share
